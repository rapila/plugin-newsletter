Widget.types.mail_group_input = {
	prepare: function() {
		this.reload();
		Widget.handle('rapila-mail_groups_changed', this.reload.bind(this));
	},
	
	reload: function() {
		var _this = this;
		var option = jQuery('<option/>');
		var mail_groups = this.getMailGroups(this.settings.include_temporary_mail_groups);
		jQuery.each(mail_groups, function(group_id, group_name) {
			option.clone().text(group_name).attr('value', group_id).appendTo(this._element);
		}.bind(this));
		if(this.getHasBackendCreatedSubscriberGroups()) {
			_this._element.prop('multiple', false);
		}
	},
	
	settings: {
		include_temporary_mail_groups: true
	}
};